---
import siteConfig from "../../data/site-config.json";

interface Props {
    t: {
        copyright: string;
        privacyPolicy: string;
        termsOfService: string;
        madeBy: string;
        with: string;
        in: string;
    };
    lang: string;
}

const { t, lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-obsidian py-16 px-6 border-t border-smoke">
    <div class="max-w-7xl mx-auto">
        <div
            class="grid grid-cols-1 md:grid-cols-3 gap-12 items-center text-center md:text-left"
        >
            <!-- Branding -->
            <div>
                <a
                    href={`/${lang}/`}
                    class="text-3xl font-heading font-bold text-ivory tracking-tighter"
                >
                    CHAP<span class="text-gold">MAGIC</span>
                </a>
                <p
                    class="mt-4 text-ivory-muted text-sm max-w-xs mx-auto md:mx-0"
                >
                    Experiencias de mentalismo e ilusionismo de alto impacto
                    para eventos corporativos y privados.
                </p>
            </div>

            <!-- Social Links -->
            <div class="flex justify-center gap-8">
                <a
                    href={siteConfig.links.instagram}
                    target="_blank"
                    class="text-ivory-muted hover:text-gold transition-colors"
                >
                    <span class="sr-only">Instagram</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                        ></path></svg
                    >
                </a>
                <a
                    href={siteConfig.links.youtube}
                    target="_blank"
                    class="text-ivory-muted hover:text-gold transition-colors"
                >
                    <span class="sr-only">YouTube</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
                        ></path></svg
                    >
                </a>
            </div>

            <!-- Contact Info -->
            <div class="text-sm">
                <p class="text-ivory">
                    Email: <a
                        href={`mailto:${siteConfig.contact.email}`}
                        class="text-gold hover:underline"
                        >{siteConfig.contact.email}</a
                    >
                </p>
                <p class="text-ivory mt-2">
                    WhatsApp: <a
                        href={`https://wa.me/${siteConfig.contact.whatsapp.replace("+", "")}`}
                        class="text-gold hover:underline"
                        >{siteConfig.contact.whatsapp}</a
                    >
                </p>
            </div>
        </div>

        <div
            class="mt-16 pt-8 border-t border-smoke/30 flex flex-col md:flex-row justify-between items-center gap-6"
        >
            <p class="text-xs text-smoke font-body">
                {t.copyright.replace("2026", currentYear.toString())}
            </p>
            <div class="flex gap-6 text-xs text-smoke font-body">
                <a
                    href={`/${lang}/privacy`}
                    class="hover:text-gold transition-colors"
                    >{t.privacyPolicy}</a
                >
                <a
                    href={`/${lang}/terms`}
                    class="hover:text-gold transition-colors"
                    >{t.termsOfService}</a
                >
            </div>
        </div>

        <!-- Easter Egg -->
        <div
            class="mt-8 text-center opacity-40 hover:opacity-100 transition-opacity duration-500"
        >
            <p class="text-[10px] tracking-widest font-body uppercase">
                <span class="text-[#74ACDF]">{t.madeBy}</span>
                <span class="text-ivory">{t.with}</span>
                <span
                    class="text-gold text-sm inline-block transform translate-y-[1px]"
                    >‚ù§</span
                >
                <span class="text-ivory">{t.in}</span>
                <span class="text-[#74ACDF]">Argentina</span>.
                <a
                    href="https://dev.rodrigocamino.com/"
                    target="_blank"
                    class="ml-1 text-ivory-muted hover:text-gold transition-colors underline decoration-gold/20 underline-offset-4"
                >
                    Rodrigo Camino
                </a>
            </p>
        </div>
    </div>
</footer>
