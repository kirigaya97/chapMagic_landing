---
import SectionHeading from '../ui/SectionHeading.astro';
import Reveal from '../ui/Reveal.astro';

interface Quote {
  text: string;
  author: string;
  role: string;
}

interface Props {
  t: {
    sectionTitle: string;
    quotes: Quote[];
  };
}

const { t } = Astro.props;
---

<section id="jury" class="py-section-mobile md:py-section bg-obsidian px-6 overflow-hidden">
  <div class="max-w-5xl mx-auto">
    <SectionHeading title={t.sectionTitle} subtitle="Reconocimiento Internacional" />
    
    <div class="space-y-16">
      {t.quotes.map((quote, index) => (
        <Reveal class={index % 2 === 0 ? 'text-left' : 'text-right'}>
          <div class={`relative p-8 md:p-12 border-l-4 border-gold bg-obsidian-light/50 backdrop-blur-sm rounded-r-card ${index % 2 !== 0 ? 'border-l-0 border-r-4 rounded-r-none rounded-l-card' : ''}`}>
            <svg class="absolute top-4 left-4 w-12 h-12 text-gold/10 -z-10" fill="currentColor" viewBox="0 0 32 32">
              <path d="M10 8v8h6a6 6 0 0 1-6 6v2a8 8 0 0 0 8-8V8h-8zm12 0v8h6a6 6 0 0 1-6 6v2a8 8 0 0 0 8-8V8h-8z"></path>
            </svg>
            <p class="text-xl md:text-3xl font-heading italic text-ivory mb-8 leading-relaxed">
              "{quote.text}"
            </p>
            <div>
              <p class="text-gold font-heading font-bold text-xl">{quote.author}</p>
              <p class="text-ivory-muted text-sm uppercase tracking-widest mt-1">{quote.role}</p>
            </div>
            
            <!-- Gold Star accent -->
            <div class={`mt-6 flex gap-1 ${index % 2 !== 0 ? 'justify-end' : ''}`}>
              {[...Array(5)].map(() => (
                <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
          </div>
        </Reveal>
      ))}
    </div>
  </div>
</section>
